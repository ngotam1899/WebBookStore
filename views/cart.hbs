<!-- Cart -->
{{> stepCart}}
<div class="container my-5">
  <!-- Content -->
  <div class="row content">
    <div class="col-12">
      <div class="table-responsive">
        <table class="table table-striped">
          <thead>
            <tr>
              <th scope="col"> </th>
              <th scope="col">Product</th>
              <th scope="col" class="text-center">Quantity</th>
              <th scope="col" class="text-right">Price</th>
              <th> </th>
            </tr>
          </thead>
          <tbody>
            {{#each items}}
            {{!-- (items, quantity, price) --}}
            <form class="formUpdate" data-id={{item.id}}>
            <tr>
              <td class="text-center"><img src="{{item.imagepath}}" style="height: 8vh;" /> </td>
              <td>{{item.name}}</td>
              <td><input type="number" class="form-control" id="quantity{{item.id}}" type="text" value={{quantity}} /></td>
              <td class="text-right">${{price}}</td>
              <td class="text-right">
                <button type="submit" class="btn btn-sm btn-warning" data-id={{item.id}}><i class="fa fa-pencil-alt"></i></button> 
                <button class="btn btn-sm btn-danger btn-cart-delete" data-id={{item.id}}><i class="fa fa-trash"></i></button> 
                
              </td>
            </tr>
            </form>
            {{/each}}
            <tr>
              <td></td>
              <td></td>
              <td></td>
              <td>Sub-Total</td>
              <td class="text-right">{{totalPrice}}</td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
    <div class="col mb-2">
      <div class="row">
        <div class="col-sm-12  col-md-6">
          <a href="/products" class="btn btn-block btn-light">Continue to buy</a>

        </div>
        <div class="col-sm-12 col-md-6 text-right">
          <a href="/cart/shipping" class="btn btn-lg btn-block btn-success text-uppercase">Checkout</a>
        </div>
      </div>
    </div>
  </div>
</div>