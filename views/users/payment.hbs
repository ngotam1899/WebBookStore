
  <!-- Main Content -->
    {{> stepCart}}
  <div class="container my-5">
    <div class="row content">
      <div class="col-md-6 shipping col-sm-6 col-xs-12">
        <h2 class="text-center">Payment Method</h2>
        <br/>
        <form method="POST" action="/cart/success">
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentMethod1" value="COD" checked>
            <label class="form-check-label" for="paymentMethod1">
              COD
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentMethod2" value="VNPay" disabled>
            <label class="form-check-label" for="paymentMethod2">
              VNPay
            </label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="radio" name="paymentMethod" id="paymentMethod3" value="PayPal" disabled>
            <label class="form-check-label" for="paymentMethod3">
              PayPal
            </label>
          </div>
          <hr/>
          <div class="col-12">
            <button type="submit" class="btn btn-success w-100">Confirm to Pay Now</button>
       
          </div>
      </div>
        </form>
      <div class="col-md-6 col-sm-6">
        <div class="row">
          <div class="col">
            <h3 class="float-left">Your cart</h3>
            <h3 class="float-right circle">{{cartItemCount}}</h3>
          </div>
        </div>
        <div class="card">
          {{#each items}}
        <div class="card-body">
          <div class="row">
            <div class="col-12">
              <h4 class="float-left">{{item.name}} x {{quantity}}</h4>
              <h5 class="float-right">{{item.price}}$</h5>
            </div>
          </div>
          <div>{{item.summary}}</div>
        </div>
        {{/each}}
        <div class="card-footer">
          <h4 class="float-left">Total (USD)</h4>
          <h5 class="float-right my-2">{{totalPrice}}$</h5>
        </div>
        </div>
      </div>
    </div>
  </div>